%h1 Tasks

= link_to "To Do", list_tasks_path(completed: false)
= link_to "Done", list_tasks_path(completed: true)
= link_to "All Tasks", list_tasks_path(view_all: true)

%table
  %thead
    %tr
      %th Name
      %th Completed
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td=task.name
        %td=task.completed
        %td=link_to 'Show', list_task_path(@list, task)
        %td=link_to 'Edit', edit_list_task_path(@list, task)
        %td=link_to 'Destroy', [@list, task], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

=link_to 'Add a task', new_list_task_path(@list)
